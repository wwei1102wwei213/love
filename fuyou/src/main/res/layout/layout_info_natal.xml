<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/v_natal_report"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:visibility="gone">

        <TextView
            android:id="@+id/tv_natal_report_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="@dimen/font14"
            android:text="a sdsd,saddsf,fdsgd, dfg onsete"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moon Sign"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font12"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/icon_report_moon_sign"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    >
                    <ImageView
                        android:id="@+id/iv_sign_moon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="centerInside"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_sign_moon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leo"
                    android:textColor="@color/text_ccc"
                    android:textSize="@dimen/font14"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sun Sign"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font12"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/icon_report_sun_sign"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    >
                    <ImageView
                        android:id="@+id/iv_sign_sun"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_sign_0"
                        android:scaleType="centerInside"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_sign_sun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leo"
                    android:textColor="@color/text_ccc"
                    android:textSize="@dimen/font14"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asc Sign"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font12"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/icon_report_asc_sign"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    >
                    <ImageView
                        android:id="@+id/iv_sign_asc"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:scaleType="centerInside"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_sign_asc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leo"
                    android:textColor="@color/text_ccc"
                    android:textSize="@dimen/font14"
                    />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_natal_report_detail"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="DETAIL"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/font16"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />
</LinearLayout>