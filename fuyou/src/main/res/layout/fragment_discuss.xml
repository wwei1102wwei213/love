<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/base_background">

        <View
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/base_all" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_title_height"
            android:background="@color/base_all">
            <TextView
                android:id="@+id/tv_title_base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/base_title_height"
                android:layout_marginRight="@dimen/base_title_height"
                android:textColor="@color/base_title_color"
                android:gravity="center"
                android:textSize="@dimen/base_title_size"
                />

        </RelativeLayout>
        <com.fuyou.play.widget.pullwidget.pullrefresh.PullElasticityListView
            android:id="@+id/pv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

