<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">
    <RelativeLayout
        android:id="@+id/ll_top_choose_time"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#e6e6e6"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_time_title"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/btn_time_choose"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:text="OK"
            android:textColor="#333333"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@id/ll_top_choose_time"
        android:orientation="horizontal" >
        <com.hammerpark.microcubehoroscope.widget.choosetime.McTimePicker
            android:id="@+id/mc_time_picker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</RelativeLayout>