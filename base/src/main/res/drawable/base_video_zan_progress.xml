<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />
            <gradient
                android:angle="0"
                android:centerColor="#2F3338"
                android:centerY="0.75"
                android:endColor="#2F3338"
                android:startColor="#2F3338" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="2dp" />
                <gradient
                    android:angle="0"
                    android:centerColor="#8D7156"
                    android:centerY="0.75"
                    android:endColor="#8D7156"
                    android:startColor="#8D7156" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" />
                <gradient
                    android:angle="0"
                    android:endColor="#8D7156"
                    android:startColor="#8D7156" />
            </shape>
        </clip>
    </item>
</layer-list>