<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反馈类型："
            android:textColor="@color/feedback_message_title_color"
            android:textSize="15sp"
            android:paddingTop="20dp"
            android:paddingLeft="12dp"
            android:paddingBottom="5dp"
            />
        <TextView
            android:id="@+id/tv_feedback_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/feedback_message_content_color"
            android:textSize="14sp"
            android:paddingTop="20dp"
            android:paddingLeft="12dp"
            android:paddingBottom="5dp"
            android:lineSpacingExtra="3dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="影片名称："
            android:textColor="@color/feedback_message_title_color"
            android:textSize="15sp"
            android:paddingLeft="12dp"
            android:paddingBottom="5dp"
            />
        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:textColor="@color/feedback_message_content_color"
            android:textSize="14sp"
            android:paddingLeft="12dp"
            android:paddingBottom="5dp"
            android:lineSpacingExtra="3dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无"
        android:textColor="@color/feedback_message_content_color"
        android:textSize="14sp"
        android:paddingTop="8dp"
        android:paddingLeft="12dp"
        android:paddingBottom="5dp"
        android:lineSpacingExtra="3dp"
        />

    <TextView
        android:id="@+id/tv_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无"
        android:textColor="#999"
        android:textSize="12sp"
        android:paddingTop="8dp"
        android:paddingLeft="12dp"
        android:paddingBottom="17dp"
        android:lineSpacingExtra="3dp"
        />

    <LinearLayout
        android:id="@+id/v_replay"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服回复："
            android:textColor="@color/feedback_message_title_color"
            android:textSize="15sp"

            android:paddingLeft="12dp"
            android:paddingBottom="5dp"
            />
        <TextView
            android:id="@+id/tv_replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/feedback_message_content_color"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:paddingLeft="12dp"
            android:paddingBottom="5dp"
            android:lineSpacingExtra="3dp"
            />
        <TextView
            android:id="@+id/tv_replay_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无"
            android:textColor="#999"
            android:textSize="12sp"
            android:paddingTop="8dp"
            android:paddingLeft="12dp"
            android:paddingBottom="17dp"
            android:lineSpacingExtra="3dp"
            />
    </LinearLayout>

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/info_message_space_line"/>
</LinearLayout>