<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_title_background"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <include layout="@layout/base_title_layout" />
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/bg_color"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="我遇到的问题"
                    android:textColor="#CCC"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="18dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/feedback_option1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_feedback_option_selector"
                            android:gravity="center"
                            android:text="无法播放"
                            android:textColor="@color/selector_feedback_option_text"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/feedback_option2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_feedback_option_selector"
                            android:gravity="center"
                            android:text="播放卡顿"
                            android:textColor="@color/selector_feedback_option_text"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/feedback_option3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_feedback_option_selector"
                            android:gravity="center"
                            android:text="无法下载"
                            android:textColor="@color/selector_feedback_option_text"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/feedback_option4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_feedback_option_selector"
                            android:gravity="center"
                            android:text="建议"
                            android:textColor="@color/selector_feedback_option_text"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/feedback_option5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_feedback_option_selector"
                            android:gravity="center"
                            android:text="求片"
                            android:textColor="@color/selector_feedback_option_text"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/feedback_option6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bg_feedback_option_selector"
                            android:gravity="center"
                            android:text="其他问题"
                            android:textColor="@color/selector_feedback_option_text"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="详细描述（必填）"
                    android:textColor="#CCC"
                    android:textSize="15sp" />


                <EditText
                    android:id="@+id/feedback_edit_content"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:background="#434346"
                    android:gravity="start"
                    android:lineSpacingExtra="7dp"
                    android:padding="12dp"
                    android:textColor="#CCCCCC"
                    android:textColorHint="#aaa"
                    android:textSize="14sp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="请输入联系方式，方便我们联系（选填）"
                    android:textColor="#CCC"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp" />
                <EditText
                    android:id="@+id/feedback_edit_contact"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:background="#434346"
                    android:gravity="center_vertical"
                    android:hint="请留下手机或QQ"
                    android:inputType="phone"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:singleLine="true"
                    android:textColor="#CCCCCC"
                    android:textColorHint="#aaa"
                    android:textSize="14sp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"/>

                <TextView
                    android:id="@+id/feedback_submit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/selector_level_exchange_btn"
                    android:gravity="center"
                    android:text="提交反馈"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />


            </LinearLayout>

        </ScrollView>
    </FrameLayout>
</LinearLayout>