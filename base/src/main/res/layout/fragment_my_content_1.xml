<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/my_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/mine_bg"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:background="@drawable/base_bg_white_radius"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="75dp"
            >
            <LinearLayout
                android:id="@+id/v_user_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <!--<ImageView
                    android:id="@+id/my_head_sex_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sex_gender_other"
                    />-->
                <TextView
                    android:id="@+id/my_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/base_title_color"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:text="请登录"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mine_invite_hint"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="14sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_eee"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">
                <LinearLayout
                    android:id="@+id/my_coin_rl"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/my_coin_tv"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:text="11"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/base_title_color"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="今日剩余书币"
                        android:textSize="13sp"
                        android:textColor="@color/base_invite_normal_text"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/line_ddd"/>

                <RelativeLayout
                    android:id="@+id/v_invite_level"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_icon_level"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/ic_level2_s"
                        android:scaleType="centerInside"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/tv_level_next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mine_invite_level"
                        android:textSize="13sp"
                        android:textColor="@color/base_invite_normal_text"
                        android:gravity="center_horizontal"
                        android:layout_below="@id/iv_icon_level"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/my_arrow" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/v_info"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="110dp"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_level_exchange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VIP等级兑换"
                    android:background="@drawable/base_bg_border_btn"
                    android:textColor="@color/base_title_color"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginBottom="15dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/my_head_rl"
                android:layout_width="100dp"
                android:layout_height="96dp"
                >
                <com.wei.wlib.widget.CircleImageView
                    android:id="@+id/my_head_img"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    app:border_color="#fff"
                    app:border_width="2dp"
                    android:background="@mipmap/default_user_icon"/>

                <ImageView
                    android:id="@+id/iv_level_info"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_level1_s"
                    android:scaleType="centerInside"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_level_or_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请登录"
                    android:background="@drawable/base_bg_border_btn"
                    android:textColor="@color/base_title_color"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginBottom="15dp"
                    />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</merge>