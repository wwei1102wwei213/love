<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_color_dark"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_home_menu_ground">
        <View
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#26292F"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_search_layout_height"
            android:gravity="center_vertical"
            android:background="#26292F">
            <TextView
                android:id="@+id/tv_search"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/shape_search_ground"
                android:drawableLeft="@mipmap/icon_search"
                android:paddingLeft="12dp"
                android:text="@string/search_hint_text"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textColor="#999999"
                android:drawablePadding="8dp"/>
            <ImageView
                android:id="@+id/iv_search_download"
                android:layout_width="36dp"
                android:layout_height="@dimen/base_search_menu_size"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_download"/>
            <ImageView
                android:id="@+id/iv_search_record"
                android:layout_width="36dp"
                android:layout_height="@dimen/base_search_menu_size"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_history"/>
        </LinearLayout>


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp">

                    <com.wei.wlib.widget.coverflow.core.PagerContainer
                        android:id="@+id/pc_banner"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        >

                        <android.support.v4.view.ViewPager
                            android:id="@+id/vp_banner"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="31dp"
                            android:layout_marginRight="31dp"
                            android:layout_height="190dp"
                            android:layout_gravity="center" />

                    </com.wei.wlib.widget.coverflow.core.PagerContainer>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:layout_below="@id/pc_banner">
                        <com.wei.wlib.widget.DrawCircleView
                            android:id="@+id/dcv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_classify"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/base_bg_color_dark"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp">
                    <View
                        android:layout_width="@dimen/home_menu_agent_width"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/home_menu_agent_margin"
                        android:layout_marginBottom="@dimen/home_menu_agent_margin"
                        android:background="@color/base_title_color"
                        android:layout_marginLeft="@dimen/home_menu_agent_left"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/home_menu_newest_title"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/home_menu_title_color"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/more_newest"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/home_menu_more_btn"
                        android:gravity="center_vertical"
                        android:textSize="13sp"
                        android:textColor="@color/channel_menu_more_text"
                        android:drawableRight="@mipmap/menu_right"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:drawablePadding="3dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_newest"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    >

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/base_bg_color_dark"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp">
                    <View
                        android:layout_width="@dimen/home_menu_agent_width"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/home_menu_agent_margin"
                        android:layout_marginBottom="@dimen/home_menu_agent_margin"
                        android:background="@color/base_title_color"
                        android:layout_marginLeft="@dimen/home_menu_agent_left"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/home_menu_hot_title"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/home_menu_title_color"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/more_hot"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/home_menu_more_btn"
                        android:gravity="center_vertical"
                        android:textSize="13sp"
                        android:textColor="@color/channel_menu_more_text"
                        android:drawableRight="@mipmap/menu_right"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:drawablePadding="3dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_hot"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    >

                </LinearLayout>
                <TextView
                    android:id="@+id/tv_hot_change"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:text="@string/home_menu_hot_change"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#E3B88E"
                    android:textSize="16sp"
                    android:drawableLeft="@mipmap/icon_home_change"
                    android:drawablePadding="7dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/base_bg_color_dark"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp">
                    <View
                        android:layout_width="@dimen/home_menu_agent_width"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/home_menu_agent_margin"
                        android:layout_marginBottom="@dimen/home_menu_agent_margin"
                        android:background="@color/base_title_color"
                        android:layout_marginLeft="@dimen/home_menu_agent_left"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/home_menu_like_title"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/home_menu_title_color"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                </android.support.v7.widget.RecyclerView>
                <View
                    android:id="@+id/line_adv"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/base_bg_color_dark"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/iv_adv"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:background="@mipmap/default_error_img"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tv_adv_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="猜你喜欢下面的广告位，可在后台中控制 开启/关闭"
                    android:textColor="#999"
                    android:textSize="13sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/ll_column"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    >

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>



</RelativeLayout>