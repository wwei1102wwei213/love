<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/my_content4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/my_ll_feedback"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_ll_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/my_ll_padding_left"
            android:paddingRight="@dimen/my_ll_padding_right">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/my_feedback" />
            <TextView
                android:id="@+id/my_ll_feedback_tv_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_ll_left_tv_margin_left"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="建议反馈"
                android:textColor="#333"
                android:textSize="@dimen/my_ll_font_size" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_ll_arrow_left"
                android:src="@mipmap/my_arrow" />
        </LinearLayout>
        <View style="@style/my_spilt" />
        <LinearLayout
            android:id="@+id/my_ll_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/my_ll_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/my_ll_padding_left"
            android:paddingRight="@dimen/my_ll_padding_right">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/my_set" />
            <TextView
                android:id="@+id/my_ll_setting_tv_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_ll_left_tv_margin_left"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="系统设置"
                android:textColor="#333"
                android:textSize="@dimen/my_ll_font_size" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_ll_arrow_left"
                android:src="@mipmap/my_arrow" />
        </LinearLayout>
    </LinearLayout>

</merge>