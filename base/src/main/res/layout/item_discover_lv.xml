<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/v_play_parent"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:background="@color/base_home_menu_ground">
        <com.yyspbfq.filmplay.player.MyJzvdStd
            android:id="@+id/jvd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/text_white"
            android:maxLines="1"
            android:padding="12dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/discover_line_space">
        <TextView
            android:id="@+id/tv_watch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginRight="@dimen/video_detail_space_horizontal"
            android:layout_marginLeft="@dimen/video_detail_space_horizontal"
            android:text="播放次数"
            android:textColor="@color/video_detail_menu_title"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="36dp"
            android:layout_height="@dimen/base_search_menu_size"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_share"
            android:layout_alignParentRight="true"
            android:rotation="180"
            android:layout_marginRight="8dp"/>
        <ImageView
            android:id="@+id/iv_collation"
            android:layout_width="36dp"
            android:layout_height="@dimen/base_search_menu_size"
            android:scaleType="centerInside"

            android:layout_toLeftOf="@id/iv_share"/>
    </RelativeLayout>
</LinearLayout>