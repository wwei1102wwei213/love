<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/error_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/error_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@mipmap/loading_error" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/error_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="1dp"
            android:text="网络连接异常，请检查网络设置"
            android:textColor="#9b9b9b"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:layout_marginTop="21dp"
        android:id="@+id/error_btn_reload"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:background="@drawable/btn_net_error_selector"
        android:text="@string/error_msg_reload"
        android:textColor="@color/actionbar_default"
        android:textSize="14sp" />
</LinearLayout>