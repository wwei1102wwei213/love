<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/base_title_layout"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color">
        <RelativeLayout
            android:id="@+id/v_system"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/menu_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"/>
            <TextView
                android:id="@+id/temp1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="系统消息"
                android:textSize="15sp"
                android:layout_marginLeft="24dp"
                android:paddingRight="8dp"
                android:drawablePadding="5dp"
                android:textColor="@color/base_item_text_color"/>
            <View
                android:id="@+id/v_red_system"
                android:layout_width="5dp"
                android:layout_height="12dp"
                android:background="@mipmap/my_message_red_dot"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/temp1"
                android:visibility="gone"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/info_message_space_line"
            android:layout_below="@id/v_content"/>
        <RelativeLayout
            android:id="@+id/v_feedback"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/menu_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"/>
            <TextView
                android:id="@+id/temp2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="客服反馈"
                android:textSize="15sp"
                android:layout_marginLeft="24dp"
                android:paddingRight="8dp"
                android:drawablePadding="5dp"
                android:textColor="@color/base_item_text_color"/>
            <View
                android:id="@+id/v_red_feedback"
                android:layout_width="5dp"
                android:layout_height="12dp"
                android:background="@mipmap/my_message_red_dot"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/temp2"
                android:visibility="gone"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/info_message_space_line"
            android:layout_below="@id/v_content"/>
    </LinearLayout>
</LinearLayout>