<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color">

    <ImageView
        android:id="@+id/iv_adv"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/video_detail_space_vertical"
        android:layout_marginRight="@dimen/video_detail_space_horizontal"
        android:layout_marginLeft="@dimen/video_detail_space_horizontal"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"
        android:visibility="gone"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/video_detail_space_horizontal"
        android:layout_marginLeft="@dimen/video_detail_space_horizontal"
        android:layout_marginTop="@dimen/video_detail_space_vertical">
        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/video_detail_menu_title"
            android:text="影片名称"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/v_video_intro"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="简介"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:textColor="#666"
                />
            <ImageView
                android:id="@+id/iv_js"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/play_filminfo_jieshao_open"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">
        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginRight="@dimen/video_detail_space_horizontal"
            android:layout_marginLeft="@dimen/video_detail_space_horizontal"
            android:text="视频简介"
            android:textColor="@color/video_detail_menu_title"
            android:visibility="gone"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:id="@+id/tv_time_and_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginRight="@dimen/video_detail_space_horizontal"
            android:layout_marginLeft="@dimen/video_detail_space_horizontal"
            android:text="时间：2018-25-33"
            android:textColor="@color/video_detail_menu_title"
            android:layout_marginTop="2dp"
            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_detail_line_height"
        android:background="@color/line_2a"
        android:layout_marginTop="@dimen/video_detail_space_vertical"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/video_detail_space_horizontal"
        android:paddingRight="@dimen/video_detail_space_horizontal"

        android:paddingBottom="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标签："
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/video_detail_menu_title"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <com.wei.wlib.widget.FlowLayout
                android:id="@+id/fl_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:horizontal_spacing="8dp"
                app:vertical_spacing="8dp"
                >
            </com.wei.wlib.widget.FlowLayout>
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_detail_line_height"
        android:background="@color/line_2a"
        android:layout_marginTop="@dimen/video_detail_space_vertical"
        android:layout_marginBottom="@dimen/video_detail_space_vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_menu_hot_comment_height"
        android:paddingLeft="@dimen/video_detail_space_horizontal"
        android:paddingRight="2dp">
        <TextView
            android:id="@+id/tv_comments_hot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="0条评论"
            android:textSize="14sp"
            android:textColor="#999999"
            android:drawableLeft="@mipmap/play_pinglun_icon"
            android:drawablePadding="4dp"
            />
        <ImageView
            android:id="@+id/iv_hate"
            android:layout_width="@dimen/video_menu_hot_comment_height"
            android:layout_height="@dimen/video_menu_hot_comment_height"
            android:src="@drawable/selector_comment_zan_icon"
            android:scaleType="centerInside"
            android:rotation="180"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:id="@+id/ll_pro"
            android:orientation="vertical"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_hate"
            android:paddingTop="8dp">
            <ProgressBar
                android:id="@+id/pb_comment_hot"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/base_video_zan_progress"
                android:progress="36"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:id="@+id/tv_zan_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="觉得很赞"
                android:gravity="center_horizontal"
                android:textSize="10sp"
                android:textColor="#8D7156"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_zan"
            android:layout_width="@dimen/video_menu_hot_comment_height"
            android:layout_height="@dimen/video_menu_hot_comment_height"
            android:src="@drawable/selector_comment_zan_icon"
            android:scaleType="centerInside"
            android:layout_toLeftOf="@id/ll_pro"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_detail_line_height"
        android:background="@color/line_2a"
        android:layout_marginTop="@dimen/video_detail_space_vertical"
        android:layout_marginBottom="@dimen/video_detail_space_vertical"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        <View
            android:layout_width="4dp"
            android:layout_height="18dp"
            android:background="#EEC8A3"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="猜你喜欢"
            android:textSize="16sp"
            android:paddingLeft="8dp"
            android:textColor="@color/video_detail_menu_title"
            android:gravity="center_vertical"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/v_parent_like"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/video_detail_space_horizontal"
        android:paddingRight="@dimen/video_detail_space_horizontal">

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2A2E32"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <View
            android:layout_width="4dp"
            android:layout_height="18dp"
            android:background="#EEC8A3"
            android:layout_gravity="bottom"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_comment_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="全部评论(0)"
            android:textSize="16sp"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:textColor="@color/video_detail_menu_title"
            android:gravity="bottom"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/tv_sort_newest"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:text="最新"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center"
            android:textColor="@color/selecor_comment_sort_text"
            android:background="@drawable/selector_comment_sort_btn"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_sort_hot"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:text="最热"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center"
            android:textColor="@color/selecor_comment_sort_text"
            android:background="@drawable/selector_comment_sort_btn"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

</LinearLayout>