<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/base_bg_color_dark"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp">
        <View
            android:layout_width="@dimen/home_menu_agent_width"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/home_menu_agent_margin"
            android:layout_marginBottom="@dimen/home_menu_agent_margin"
            android:background="@color/base_title_color"
            android:layout_marginLeft="@dimen/home_menu_agent_left"/>
        <TextView
            android:id="@+id/tv_column_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/home_menu_like_title"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:textColor="@color/home_menu_title_color"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_column_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/home_menu_more_btn"
            android:gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="@color/channel_menu_more_text"
            android:drawableRight="@mipmap/menu_right"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawablePadding="3dp"
            />
    </LinearLayout>

</LinearLayout>