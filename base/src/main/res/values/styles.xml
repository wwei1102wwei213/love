<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:backgroundDimEnabled">false</item>&lt;!&ndash; 半透明 &ndash;&gt;
        <item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="SplashAppTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/base_bg_splash</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>-->
    </style>

    <style name="TranslucentAppTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="AdvertAppTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/BaseAnimationStyle</item>
        <!--<item name="android:backgroundDimEnabled">false</item>&lt;!&ndash; 半透明 &ndash;&gt;-->
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <!--<item name="android:windowNoTitle">true</item> &lt;!&ndash; 无标题 &ndash;&gt;-->
    </style>

    <style name="BaseAnimationStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_alpha_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_alpha_in</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_alpha_out</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_alpha_out</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--书城小版块布局样式-->
    <style name="bc_category_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ffffff</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="bookcity_gridview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">10dp</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:numColumns">3</item>
        <item name="android:scrollbars">none</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">10dp</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="bookcity_category_name_l1_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="bookcity_text1_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>

    <style name="reward_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:text">28书币</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="recharge_rl_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="recharge_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:text">20元\n200书币</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="recharge_rl_style_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="recharge_text_style_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:text">20元 = 280书币</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="buy_locks_rl_ll_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="buy_locks_text_style_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:text">后10章</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="buy_locks_text_style_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">共200书币</item>
        <item name="android:textColor">@color/actionbar_default</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="radiobutton_edit_sex_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:button">@null</item>
        <!--<item name="android:textColor">@drawable/tab_text_selector</item>-->
        <item name="android:textColor">#787878</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">9dp</item>
    </style>

    <style name="bookcity_category_ll_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="FontDialogDownLoadStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">13dp</item>
        <item name="android:text">下载</item>
        <item name="android:textColor">#929292</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="FontDialogNameImgStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <!-- 对话框样式 -->
    <style name="dialog_base_style" parent="android:style/Theme.Dialog">
        <!-- Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!-- 是否不显示标题-->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上,在屏幕中间显示-->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 外面点击关闭-->
        <item name="android:windowCloseOnTouchOutside">true</item>
        <!-- 窗口背景颜色-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 去除顶部阴影 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- dialog暗淡背景浮层-->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 进出动画-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="dialog_style_no_dim" parent="dialog_base_style">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="custom_dialog_translucent" parent="dialog_base_style">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="custom_dialog_update" parent="dialog_base_style">
        <!--<item name="android:windowBackground">@drawable/update_dialog_background</item>-->
    </style>

    <style name="custom_dialog_bottom" parent="dialog_base_style">
        <item name="android:windowAnimationStyle">@style/custom_animation_up_down</item>
    </style>

    <!-- 动画样式-->
    <style name="custom_animation_up_down" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_up_in</item>
        <item name="android:windowExitAnimation">@anim/pop_down_out</item>
    </style>

    <style name="radiobutton_main_bottom_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/tab_text_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">2dp</item>
    </style>

    <style name="my_spilt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/my_ll_split</item>
        <item name="android:background">@color/split_my</item>
        <item name="android:layout_marginLeft">@dimen/my_ll_split_margin_left</item>
        <item name="android:layout_marginRight">@dimen/my_ll_split_margin_right</item>
    </style>

    <style name="tv_menu_my_invite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_10</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>
