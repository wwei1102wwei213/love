<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />
            <gradient
                android:angle="0"
                android:centerColor="@color/wlib_progress_unselected"
                android:centerY="0.75"
                android:endColor="@color/wlib_progress_unselected"
                android:startColor="@color/wlib_progress_unselected" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="2dp" />
                <gradient
                    android:angle="0"
                    android:centerColor="@color/wlib_progress_selected"
                    android:centerY="0.75"
                    android:endColor="@color/wlib_progress_selected"
                    android:startColor="@color/wlib_progress_selected" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" />
                <gradient
                    android:angle="0"
                    android:endColor="@color/wlib_progress_selected"
                    android:startColor="@color/wlib_progress_selected" />
            </shape>
        </clip>
    </item>
</layer-list>