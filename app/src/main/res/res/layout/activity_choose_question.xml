<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/base_app_title_bg"
    >
    <include layout="@layout/base_title_layout"/>
    <LinearLayout
        android:id="@+id/sv"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/choose_question_bg">
        <android.support.design.widget.TabLayout
            android:id="@+id/tl"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            app:tabIndicatorColor="@color/text_color_434284"
            app:tabSelectedTextColor="@color/text_color_434284"
            app:tabTextColor="@color/text_666"
            android:background="@color/white">

        </android.support.design.widget.TabLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_ddd"/>
        <com.andview.refreshview.XRefreshView
            android:id="@+id/xrv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </com.andview.refreshview.XRefreshView>

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/base_all"
            android:textSize="@dimen/font14"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:text="@string/choose_question_more"
            android:drawableRight="@mipmap/point_down"
            android:drawablePadding="5dp"
            android:visibility="gone"
            />
    </LinearLayout>

    <include layout="@layout/network_error" />
    <include layout="@layout/layout_no_record" />

</LinearLayout>