<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/base_app_title_bg">
    <include layout="@layout/base_title_layout_nothing"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_gray_bg"
        android:paddingTop="12dp">
        <TextView
            android:id="@+id/tv_base_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/font16"
            android:textColor="@color/base_all"
            android:gravity="center"
            android:layout_marginBottom="@dimen/padding12"
            />
        <LinearLayout
            android:id="@+id/v_time"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:visibility="visible">
            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/point_radius_circle"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:textSize="@dimen/font16"
                android:textColor="@color/base_all"
                android:text="@string/card_record_tag_time"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/text_666"
            android:textSize="@dimen/font14"
            android:lineSpacingExtra="2dp"
            android:lineSpacingMultiplier="1.05"
            android:layout_marginLeft="31dp"
            android:layout_marginBottom="16dp"
            android:visibility="visible"/>

        <LinearLayout
            android:id="@+id/v_formation"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"

            android:visibility="gone">
            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/point_radius_circle"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:textSize="@dimen/font16"
                android:textColor="@color/base_all"
                android:text="@string/card_record_tag_formation"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_card_formation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/text_666"
            android:textSize="@dimen/font14"
            android:lineSpacingExtra="2dp"
            android:lineSpacingMultiplier="1.05"
            android:layout_marginLeft="31dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/v_question"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:visibility="visible">
            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/point_radius_circle"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:textSize="@dimen/font16"
                android:textColor="@color/base_all"
                android:text="@string/card_record_tag_question"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_card_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/text_666"
            android:textSize="@dimen/font14"
            android:lineSpacingExtra="2dp"
            android:lineSpacingMultiplier="1.05"
            android:layout_marginLeft="31dp"
            android:layout_marginBottom="16dp"
            android:visibility="visible"/>
        <LinearLayout
            android:id="@+id/v_result"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:visibility="visible">
            <View
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:background="@drawable/point_radius_circle"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:textSize="@dimen/font16"
                android:textColor="@color/base_all"
                android:text="@string/card_record_tag_result"
                />
        </LinearLayout>
        <GridView
            android:id="@+id/gv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:horizontalSpacing="6dp"
            android:verticalSpacing="3dp"
            android:numColumns="3"
            android:listSelector="@color/transparent"
            tools:listitem="@layout/item_gv_card_classify"
            android:gravity="center_horizontal"
            >
        </GridView>
    </LinearLayout>

</LinearLayout>