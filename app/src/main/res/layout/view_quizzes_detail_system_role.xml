<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingRight="50dp"
    >
<com.fuyou.play.widget.CircleImageView
    android:id="@+id/circleImageView"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
     />

    <TextView
        android:id="@+id/view_quizzes_detail_system_role_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/circleImageView"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/circleImageView"
        android:layout_toRightOf="@+id/circleImageView"
        android:gravity="left"
        android:padding="12dp"
        android:textColor="@color/base_color_9"
        android:lineSpacingExtra="2.5dp"
        android:lineSpacingMultiplier="1.1"
        android:background="@drawable/shape_corner_quizzes_system_role_content_tv"
        android:text="You make a decisit base on:" />

</RelativeLayout>