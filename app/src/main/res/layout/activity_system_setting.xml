<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_all">
    <include
        android:id="@+id/v_top"
        layout="@layout/base_title_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/v_menu"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/v_version"
                style="@style/information_item_style">
                <ImageView
                    style="@style/information_icon_style"
                    android:src="@mipmap/system_setting_version"/>
                <TextView
                    style="@style/information_left_style"
                    android:text="@string/system_setting_version"/>
                <TextView
                    android:id="@+id/tv_version"
                    style="@style/information_right_style"
                    />
            </LinearLayout>

            <View style="@style/information_line_style"/>
            <LinearLayout
                android:id="@+id/v_feedback"
                style="@style/information_item_style"
                android:visibility="visible">
                <ImageView
                    style="@style/information_icon_style"
                    android:src="@mipmap/system_setting_feedback"/>
                <TextView
                    style="@style/information_left_style"
                    android:text="@string/system_setting_feedback"/>
                <TextView
                    android:id="@+id/tv_feedback"
                    style="@style/information_right_style"
                    />
            </LinearLayout>

            <View style="@style/information_line_style"/>
            <LinearLayout
                android:id="@+id/v_update"
                style="@style/information_item_style">
                <ImageView
                    style="@style/information_icon_style"
                    android:src="@mipmap/system_setting_update"/>
                <TextView
                    style="@style/information_left_style"
                    android:text="@string/system_setting_update"/>
                <TextView
                    android:id="@+id/tv_update"
                    style="@style/information_right_style"
                    />
            </LinearLayout>

            <View style="@style/information_line_style"/>
            <LinearLayout
                android:id="@+id/v_secret"
                style="@style/information_item_style">
                <ImageView
                    style="@style/information_icon_style"
                    android:src="@mipmap/system_setting_secret"/>
                <TextView
                    style="@style/information_left_style"
                    android:text="@string/system_setting_secret"/>
                <TextView
                    android:id="@+id/tv_secret"
                    style="@style/information_right_style"/>
            </LinearLayout>

            <View style="@style/information_line_style"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="退出登录"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>


</LinearLayout>