        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.fuyou.play.widget.pullwidget.pullrefresh.PullElasticityListView
            android:id="@+id/pv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>
