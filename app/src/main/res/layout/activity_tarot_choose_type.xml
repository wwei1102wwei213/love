<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_all">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/white_to_back"
        android:scaleType="centerInside"/>

    <com.hammerpark.microcubehoroscope.widget.tv.HeavyTextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes Or No One"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <com.hammerpark.microcubehoroscope.widget.tv.HeavyTextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView1"
        android:layout_marginTop="5dp" />

    <com.hammerpark.microcubehoroscope.widget.tv.HeavyTextView
        android:id="@+id/textView3"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="GET A READING"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true" />

    <com.hammerpark.microcubehoroscope.widget.tv.HeavyTextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generally Useful"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/textView3"
        android:layout_marginBottom="10dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/choose_tarot_type_vp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@id/textView3"
        android:layout_below="@id/back_button">
    </android.support.v4.view.ViewPager>

    <ImageView
        android:id="@+id/select_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/choose_tarot_type_vp"
        android:layout_alignBottom="@id/choose_tarot_type_vp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/tarot_select_back"/>

    <ImageView
        android:id="@+id/select_next_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/choose_tarot_type_vp"
        android:layout_alignBottom="@id/choose_tarot_type_vp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/tarot_select_back"
        android:rotation="180"/>

</RelativeLayout>