            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_title_height"
                android:background="@color/base_all"
                app:layout_collapseMode="parallax">
                <TextView
                    android:id="@+id/tv_title_base"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/base_title_height"
                    android:layout_marginRight="@dimen/base_title_height"
                    android:textColor="@color/base_title_color"
                    android:gravity="center"
                    android:textSize="@dimen/base_title_size"
                    />
                <ImageView
                    android:id="@+id/iv_right_base"
                    android:layout_width="@dimen/base_title_height"
                    android:layout_height="@dimen/base_title_height"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tv_right_base"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/base_title_right_padding"
                    android:paddingLeft="@dimen/base_title_right_padding"
                    android:textColor="@color/base_title_color"
                    android:textSize="@dimen/base_title_right_size"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true">
                <!--app:layout_behavior="@string/appbar_scrolling_view_behavior"-->
                <com.andview.refreshview.XRefreshView
                    android:id="@+id/xrv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical" />
                </com.andview.refreshview.XRefreshView>
            </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_post"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@mipmap/icon_post"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"/>
